# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.go]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,js,ts}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab

[*.{toml,ini}]
indent_size = 2

[{.gitmessage,.gitignore,.dockerignore}]
indent_size = 2

[go.mod]
indent_style = tab
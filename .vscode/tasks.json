{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "go: build",
      "type": "shell",
      "command": "go",
      "args": ["build", "-o", "bin/godl", "./cmd/godl/"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "go: test",
      "type": "shell",
      "command": "go",
      "args": ["test", "./..."],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "go: test with race",
      "type": "shell",
      "command": "go",
      "args": ["test", "-race", "./..."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "go: test coverage",
      "type": "shell",
      "command": "go",
      "args": ["test", "-coverprofile=coverage.out", "./..."],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "golangci-lint",
      "type": "shell",
      "command": "golangci-lint",
      "args": ["run"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": {
        "owner": "golangci-lint",
        "fileLocation": "absolute",
        "pattern": {
          "regexp": "^(.+?):(\\d+):(\\d+):\\s+(\\w+):\\s+(.+)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "label": "make: ci-check",
      "type": "shell",
      "command": "make",
      "args": ["ci-check"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$go"]
    },
    {
      "label": "make: examples",
      "type": "shell",
      "command": "make",
      "args": ["examples"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "act: test main workflow",
      "type": "shell",
      "command": "act",
      "args": ["push", "-j", "quick-checks"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "docker: build",
      "type": "shell",
      "command": "docker",
      "args": ["build", "-f", "docker/Dockerfile", "-t", "godl:local", "."],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "release: prepare",
      "type": "shell",
      "command": "./scripts/prepare-release.sh",
      "args": ["${input:version}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ],
  "inputs": [
    {
      "id": "version",
      "description": "Release version (e.g., v0.10.0)",
      "default": "v0.10.0",
      "type": "promptString"
    }
  ]
}